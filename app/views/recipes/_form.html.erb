<%= simple_form_for @recipe do |f| %>
  <div class="form-group">
    <%= f.input :title, label: "Recipe Title", input_html: { class: "form-control" } %>
  </div>

  <div class="form-group">
    <%= f.input :description, label: "Description", as: :text, input_html: { class: "form-control", rows: 3 } %>
  </div>

  <div class="form-group">
    <%= f.input :ingredients, label: "Ingredients", as: :text, input_html: { class: "form-control", rows: 5, placeholder: "List each ingredient on a new line" } %>
  </div>

  <div class="form-group">
    <%= f.input :instructions, label: "Instructions", as: :text, input_html: { class: "form-control", rows: 5, placeholder: "List each step on a new line" } %>
  </div>

  <div class="form-group">
    <%= f.input :category, label: "Category", collection: ["Main Course", "Dessert", "Appetizer", "Drink"], prompt: "Select a category", input_html: { class: "form-control" } %>
  </div>

  <div class="form-group">
    <%= f.input :difficulty, label: "Difficulty", collection: ["Easy", "Medium", "Hard"], prompt: "Select difficulty level", input_html: { class: "form-control" } %>
  </div>

  <div class="form-group">
    <%= f.button :submit, "Save Recipe", class: "btn btn-primary" %>
  </div>
<% end %>
